
@model  GetSiteAccessIP.Models.UserModel
@{
    ViewBag.Title = "LoginPage";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title - My ASP.NET Application</title>*@
    @*@Styles.Render("~/content/header")
    @Scripts.Render("~/scripts/header")*@
</head>
<body id="login-body">
    <main class="login-main">
        @*style="margin-bottom: -4px;width:300px;"*@
        <div style="margin-left:65px;">
            <img src="~/Content/Image/task.png" class="img-responsive" style="width: 200px; ">
        </div>

        <div class="login-size mt-3">
            <div class="login-header">

               
            </div>
            <div>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "login-form" }))
                {
                    <div class="form-horizontal mt-3">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group row">
                            <div class="col-4">  @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label " })</div>

                            <div class="col-6">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control userName" }, })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-2">

                            </div>
                        </div>

                        <div class="form-group row">
                         

                            <div class="col-6">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control password", autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-2">

                            </div>
                        </div>

                        <div class="login-button-area mb-4">
                            <button id="btnLogin" type="submit" class="btn btn-primary  w-25" data-toggle="modal" data-target="">Login</button>

                        </div>
                    </div>

                }
            </div>
        </div>


    </main>
   
   
</body>
</html>
